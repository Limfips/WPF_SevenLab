<Window x:Class="MainSolution.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="550" ResizeMode="NoResize">
    
    <Grid>
        <Grid x:Name="SearchFirmsGrid" Visibility="Collapsed" ShowGridLines="False">
            <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            </Grid.RowDefinitions>
            <GroupBox Header="Как вас зовут?" Margin="5" Padding="5"
                      Grid.Row="0" Grid.Column="0">
                <StackPanel>
                    <TextBox x:Name="FNameTextBox" Text="Имя"/>
                    <TextBox x:Name="SNameTextBox" Text="Фамилия"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Анкета" Margin="5" Padding="5"
                      Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
                <StackPanel >
                    <TextBlock Text="Отметьте свои положительные качества:" Margin="2"/>
                    <CheckBox x:Name="SmartCheckBox" Content="Умный" Margin="2"/>
                    <CheckBox x:Name="KindCheckBox" Content="Добрый" Margin="2"/>
                    <CheckBox x:Name="WealthyCheckBox" Content="Богатый" Margin="2"/>
                    <TextBlock Text="Отметьте свои отрицательные качества:" Margin="2"/>
                    <CheckBox x:Name="LazyCheckBox" Content="Ленивый" Margin="2"/>
                    <CheckBox x:Name="GreedyCheckBox" Content="Жадный" Margin="2"/>
                    <CheckBox x:Name="WickedCheckBox" Content="Безнравственный" Margin="2"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Список фирм" Margin="5" Padding="5"
                      Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                <ListBox x:Name="ListBox"/>
            </GroupBox>
            <GroupBox Header="О фирме" Margin="5" Padding="5"
                      Grid.Column="1" Grid.Row="2">
                <TextBlock x:Name="TextBlock" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            </GroupBox>
            <Button Grid.Row="3" Grid.Column="0"  Margin="40"
                    Content="Назад" Click="BackMenu_OnClick"/>
            <Button Grid.Row="3" Grid.Column="1" Margin="40"
                    Content="Поиск"/>
        </Grid>
        <Grid x:Name="SearchWorkersGrid" Visibility="Collapsed" ShowGridLines="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="3" Grid.Column="0" Margin="40"
                    Content="Назад" Click="BackMenu_OnClick"/>
            <Button Grid.Row="3" Grid.Column="1" Margin="40"
                    Content="Поиск"/>
            
        </Grid>
        <Grid x:Name="MainGrid" Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" 
                   Grid.RowSpan="2"/>
            <Button Margin="40"
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Content="Поиск работы" 
                    Click="DisplaySearchFirmsGrid_OnClick"/>
            <Button Grid.Row="3" Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="40"
                    Content="Поиск работяг"
                    Click="DisplaySearchWorkersGrid_OnClick"/>
        </Grid>
    </Grid>
</Window>
